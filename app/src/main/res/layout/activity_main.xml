<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenidos a mi APP




           Calculadora"
            android:textSize="30dp"
            android:padding="16dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/calculadora_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_numero1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="16dp" />

        <EditText
            android:id="@+id/numero1_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/numero_1"
            android:padding="16dp"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_numero2"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="16dp" />

        <EditText
            android:id="@+id/numero2_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/numero_2"
            android:padding="16dp"
            android:inputType="number" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_Sumar"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/sumar"
                android:textColor="@color/black"
                app:backgroundTint="@color/gray"
                android:layout_margin="5dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Restar"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="@string/restar"
                android:textColor="@color/black"
                app:backgroundTint="@color/gray"
                android:layout_margin="5dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Multiplicar"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/multiplicar"
                android:textColor="@color/black"
                app:backgroundTint="@color/gray"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Didivir"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/dividir"
                android:textColor="@color/black"
                app:backgroundTint="@color/gray"
                android:textSize="12dp"

                android:textStyle="bold" />


        </LinearLayout>
        <EditText
            android:id="@+id/respuesta_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/respuesta"
            android:padding="16dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/respuesta_TextView"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_horizontal"
            android:textSize="20dp" />


    </LinearLayout>

</layout>